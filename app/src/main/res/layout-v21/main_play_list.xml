<?xml version="1.0" encoding="utf-8"?>
<com.duan.musicoco.view.PullDownLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_play_list_container"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="@dimen/activity_default_margin_s_s"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_default_height">

        <TextView
            android:id="@+id/main_play_sheet"
            android:layout_marginLeft="@dimen/activity_default_margin"
            android:gravity="center_vertical|start"
            android:text="歌单："
            android:textSize="@dimen/text_middle_s"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <ImageButton
            android:scaleType="fitCenter"
            android:src="@drawable/ic_location_searching_black_24dp"
            android:id="@+id/main_play_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_default_margin"
            android:paddingRight="@dimen/activity_default_margin" />

        <ImageButton
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@id/main_play_location"
            android:src="@drawable/single_loop"
            android:id="@+id/main_play_mode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/activity_default_margin"
            android:paddingRight="@dimen/activity_default_margin" />

    </RelativeLayout>

    <View
        android:id="@+id/main_play_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white_d_d" />

    <ListView
        android:id="@+id/main_play_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1px" />

</com.duan.musicoco.view.PullDownLinearLayout>