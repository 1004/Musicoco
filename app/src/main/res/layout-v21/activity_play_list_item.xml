<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/play_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:drawablePadding="5dp"
        android:drawableTint="@android:color/black"
        android:gravity="center_vertical|start"
        android:lines="1"
        android:maxWidth="200dp"
        android:paddingBottom="13dp"
        android:paddingTop="13dp"
        android:textSize="@dimen/text_middle" />

    <TextView
        android:id="@+id/play_list_item_arts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/play_list_item_name"
        android:layout_toLeftOf="@+id/play_list_item_remove"
        android:layout_toRightOf="@+id/play_list_item_name"
        android:layout_toStartOf="@id/play_list_item_remove"
        android:gravity="center_vertical|start"
        android:lines="1"
        android:maxWidth="100dp"
        android:textSize="@dimen/text_small" />

    <ImageButton
        android:id="@+id/play_list_item_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_default_margin"
        android:background="?android:selectableItemBackgroundBorderless"
        android:clickable="true"
        android:padding="5dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/ic_clear_black_24dp"
        android:tint="@color/white_d_d" />

</RelativeLayout>