<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/play_main_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="0.2">

        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextSwitcher
            android:id="@+id/play_ts_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/fade_in"
            android:minHeight="@dimen/play_song_name_minSize"
            android:outAnimation="@android:anim/fade_out" />
        <TextSwitcher
            android:id="@+id/play_ts_song_arts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inAnimation="@android:anim/fade_in"
            android:minHeight="@dimen/play_song_name_minSize"
            android:outAnimation="@android:anim/fade_out"
            android:layout_below="@+id/play_ts_song_name"
            android:layout_alignLeft="@+id/play_ts_song_name"
            android:layout_alignStart="@+id/play_ts_song_name" />

    </android.support.constraint.ConstraintLayout>

    <FrameLayout
        android:id="@+id/play_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_default_margin"
        android:layout_marginLeft="@dimen/activity_default_margin"
        android:layout_marginRight="@dimen/activity_default_margin"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_default_margin"
            android:layout_marginLeft="@dimen/activity_default_margin"
            android:layout_marginRight="@dimen/activity_default_margin">

            <TextView
                android:id="@+id/play_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/play_seekBar"
                android:layout_marginTop="12dp"
                android:lines="1"
                android:text="00:00"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/play_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/play_seekBar"
                android:layout_marginTop="12dp"
                android:lines="1"
                android:text="00:00"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_small" />

            <android.support.v7.widget.AppCompatSeekBar
                android:id="@+id/play_seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/play_seek_bar_padding"
                android:paddingRight="@dimen/play_seek_bar_padding" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/play_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="@dimen/activity_default_padding"
                android:tint="@color/bt_tint"
                app:srcCompat="@drawable/ic_play_arrow_white_48dp" />

            <ImageButton
                android:id="@+id/play_pre_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/activity_default_margin"
                android:layout_toStartOf="@id/play_song"
                android:backgroundTint="#00ffffff"
                android:tint="@color/bt_tint"
                app:srcCompat="@drawable/ic_skip_previous_black_24dp" />


            <ImageButton
                android:id="@+id/play_next_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/activity_default_margin"
                android:layout_toEndOf="@id/play_song"
                android:backgroundTint="#00ffffff"
                android:tint="@color/bt_tint"
                app:srcCompat="@drawable/ic_skip_next_black_24dp" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>